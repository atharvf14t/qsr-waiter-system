generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TableStatus {
  VACANT
  OCCUPIED
}

enum OrderStatus {
  CREATED
  PREPARING
  SERVED
  PAID
  CANCELLED
}

model Waiter {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  name      String
  isActive  Boolean   @default(true)

  sessions  Session[]
  tables    Table[]
  orders    Order[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([username])
}

model Session {
  id        Int       @id @default(autoincrement())
  waiterId  Int
  token     String    @unique
  expiresAt DateTime

  waiter    Waiter    @relation(fields: [waiterId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())

  @@index([token])
  @@index([waiterId])
}

model Floor {
  id        Int      @id @default(autoincrement())
  name      String
  tables    Table[]

  createdAt DateTime @default(now())
}

model Table {
  id        Int         @id @default(autoincrement())
  number    String
  capacity  Int
  status    TableStatus @default(VACANT)

  floorId   Int
  waiterId  Int?

  floor     Floor      @relation(fields: [floorId], references: [id], onDelete: Cascade)
  waiter    Waiter?    @relation(fields: [waiterId], references: [id])

  orders    Order[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([floorId, number])
  @@index([status])
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  items     MenuItem[]

  createdAt DateTime  @default(now())
}

model MenuItem {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  price       Float
  available   Boolean  @default(true)

  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  orderItems  OrderItem[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([available])
  @@index([name])
}

model Order {
  id        Int         @id @default(autoincrement())
  orderNo   String      @unique

  waiterId  Int
  tableId   Int

  status    OrderStatus @default(CREATED)
  total     Float

  waiter    Waiter      @relation(fields: [waiterId], references: [id])
  table     Table       @relation(fields: [tableId], references: [id])

  items     OrderItem[]

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([status])
  @@index([tableId])
  @@index([waiterId])
}

model OrderItem {
  orderId  Int
  menuId   Int
  quantity Int
  notes    String?

  order    Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menu     MenuItem  @relation(fields: [menuId], references: [id])

  @@id([orderId, menuId])
}